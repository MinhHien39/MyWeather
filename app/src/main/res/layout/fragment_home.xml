<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name123"
                android:hint="San Fransico"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toTopOf="@id/constraint"
                android:layout_marginTop="35dp"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/img_title"
                android:src="@drawable/sun"/>
            <ImageView
                android:id="@+id/img_temperature"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/hinhtron"
                android:background="@color/black"

                app:layout_constraintStart_toEndOf="@id/txt_temperature"
                app:layout_constraintTop_toTopOf="@id/txt_temperature"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_temperature"
                android:textSize="70sp"
                app:layout_constraintStart_toStartOf="@id/txt_name123"
                app:layout_constraintTop_toTopOf="@id/txt_name123"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:hint="18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloudy"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:background="@drawable/cloudy"
                android:id="@+id/txt_cloudy"
                app:layout_constraintTop_toBottomOf="@id/txt_temperature"
                app:layout_constraintStart_toStartOf="@id/txt_temperature"
                app:layout_constraintEnd_toEndOf="@id/txt_temperature"
                android:padding="8dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_cloudy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout1"

                >
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/giotnuoc"
                    android:id="@+id/img_water"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="13%"
                    android:id="@+id/txt_humidity"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:layout_marginLeft="60dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.533mBar"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/gio"
                    android:layout_marginLeft="60dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="9km/h"
                    android:id="@+id/txt_wind"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linearLayout1"
                app:layout_constraintStart_toStartOf="@id/linearLayout1"
                app:layout_constraintEnd_toEndOf="@id/linearLayout1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout2"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sun"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:text="07:00AM"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:00PM"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="200dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/moon"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                app:layout_constraintStart_toStartOf="@id/linearLayout2"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_Today"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView1"
                android:orientation="horizontal"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/txt_Today"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:id="@+id/recyclerView2"
                app:layout_constraintTop_toBottomOf="@id/recyclerView1"
                app:layout_constraintStart_toStartOf="@id/recyclerView1"
                app:layout_constraintEnd_toEndOf="@id/recyclerView1"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>



</ScrollView>
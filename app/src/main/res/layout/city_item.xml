<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/city_corner_item"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/parent">



    <TextView
        android:id="@+id/txt_tempCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="22"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/hinhtron"
        android:layout_toRightOf="@id/txt_tempCity"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_nameCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tempCity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Austin" />

    <TextView
        android:id="@+id/txt_nameCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nameCity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="USA" />

    <ImageView
        android:id="@+id/img_waterCity"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/txt_nameCountry"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/giotnuoc" />

    <TextView
        android:id="@+id/txt_humidityCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nameCountry"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_waterCity"
        android:text="17%"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/img_windCity"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/txt_nameCountry"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/gio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nameCountry"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_windCity"
        android:text="7km/h"
        android:textSize="10sp"
        android:id="@+id/txt_windCity"/>


    <ImageView
        android:id="@+id/img_city"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_tempCity"
        android:scaleType="fitXY"
        android:src="@drawable/sun" />





</RelativeLayout>